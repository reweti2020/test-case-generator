{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "public",
  "framework": null,
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [{ "source": "/api/(.*)", "destination": "/api/$1" }, { "source": "/(.*)", "destination": "/server.js" }],
  "env": {
    "NODE_ENV": "production"
  }
}

